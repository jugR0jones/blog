<header class="site-header">
  <div class="container">
    <h1 class="site-title"><a href="{{ site.baseUrl }}">{{ site.title }}</a></h1>

    <nav class="site-nav" aria-label="Main navigation">
      <ul>
        {% if navigation %}
          {% for item in navigation %}
            <li><a href="{{ item.url }}">{{ item.label }}</a></li>
          {% endfor %}
        {% else %}
        {% endif %}
      </ul>
    </nav>
  </div>
</header>
